{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6", "ES2015", "ES2016", "ES2017"
    ],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "outDir": "dist",
		"sourceMap": true,
		"sourceRoot": "src",
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
